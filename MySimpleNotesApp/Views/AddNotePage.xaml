<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="False"
             x:Class="MySimpleNotesApp.Views.AddNotePage"
             Title="AddNotePage">

    <VerticalStackLayout Padding="20" Spacing="12">
        <Entry Placeholder="Tytuł" Text="{Binding Title}" />
        <Editor Placeholder="Treść notatki" Text="{Binding Content}" HeightRequest="150"/>
        <Button Text="Zapisz" Command="{Binding SaveCommand}" />
    </VerticalStackLayout>

</ContentPage>